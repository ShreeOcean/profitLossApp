<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="solid_button" parent="Widget.MaterialComponents.Button">
        <item name="android:height">?attr/actionBarSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">2dp</item>
        <item name="android:buttonCornerRadius" tools:ignore="NewApi">3dp</item>
        <item name="android:backgroundTint">#437EFF</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="text_button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:radius">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <!-- <item name="android:textAppearance">@style/subtitle_textview_secondary_14</item>-->
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <style name="outlined_button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:height">?attr/actionBarSize</item>
        <item name="android:radius">0dp</item>
        <item name="strokeColor">#437EFF</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">#437EFF</item>
        <item name="android:backgroundTint">#101314</item>
    </style>
</resources>