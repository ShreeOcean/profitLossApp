<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101314"
    android:padding="15dp">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#89A0AE"
        android:drawableStart="@drawable/clock_icon"
        android:drawablePadding="10dp"
        android:layout_marginTop="40dp"
        android:text="It takes usually takes up to 3 minutes for payment confirmation."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />
    <TextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#89A0AE"
        android:drawableStart="@drawable/hourglass_icon"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:text="It takes usually takes up to 3 minutes for payment confirmation."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checking with bank..."
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_time_count" />

    <TextView
        android:id="@+id/tv_time_count_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:50"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_time_count"
        app:layout_constraintEnd_toEndOf="@+id/img_time_count"
        app:layout_constraintStart_toStartOf="@+id/img_time_count"
        app:layout_constraintTop_toTopOf="@+id/img_time_count" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Checking your payment with our bank"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2 of 2:"
        android:textAlignment="textStart"
        android:textColor="#89A0AE"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_time_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/time_count"
        android:layout_margin="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/btnGoToWallet"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Go to wallet"
        android:theme="@style/outlined_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>